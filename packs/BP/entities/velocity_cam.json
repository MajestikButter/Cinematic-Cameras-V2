{
  "format_version": "1.19.50",
  "minecraft:entity": {
    "description": {
      "identifier": "mbcc:velocity_cam",
      "is_spawnable": false,
      "is_summonable": true,
      "properties": {
        "mbcc:despawn_time": {
          "type": "int",
          "range": [0, 5],
          "default": 0
        }
      }
    },
    "components": {
      "minecraft:collision_box": {
        "height": 0,
        "width": 0
      },
      "minecraft:damage_sensor": {
        "triggers": [{ "cause": "all", "deals_damage": false }]
      },
      "minecraft:health": {
        "value": 1,
        "max": 1,
        "min": 1
      },
      "minecraft:environment_sensor": {
        "triggers": [
          {
            "event": "mbcc:incre_timer",
            "filters": {
              "test": "rider_count",
              "value": 0
            }
          },
          {
            "event": "mbcc:reset_timer",
            "filters": {
              "test": "rider_count",
              "value": 1
            }
          }
        ]
      },
      "minecraft:type_family": { "family": ["velocity_cam"] },
      "minecraft:rideable": {
        "family_types": ["player", "velocity_cam"],
        "seat_count": 1,
        "seats": [{ "position": [0, 0, 0] }]
      }
    },
    "component_groups": {
      "despawn": { "minecraft:instant_despawn": {} }
    },
    "events": {
      "mbcc:instant_despawn": { "add": { "component_groups": ["despawn"] } },
      "mbcc:reset_timer": { "set_property": { "mbcc:despawn_time": 0 } },
      "mbcc:incre_timer": {
        "sequence": [
          {
            "filters": {
              "test": "int_property",
              "domain": "mbcc:despawn_time",
              "value": 5
            },
            "trigger": { "event": "mbcc:instant_despawn" }
          },
          { "set_property": { "mbcc:despawn_time": "q.property('mbcc:despawn_time') + 1" } }
        ]
      }
    }
  }
}
